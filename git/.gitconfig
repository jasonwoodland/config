[user]
	name = Jason Woodland
	email = me@jasonwoodland.com
[core]
	editor = vim
	excludesfile = /Users/jason/.gitignore_global
	abbrev = 7
[color]
	ui = true
[format]
	pretty = "%C(magenta)%h%C(blue)%d %C(reset)%s %C(dim white)(%an)%n        %C(green)%aD %C(dim white)(%ar)%C(reset)%n"
[alias]
	alias = !git config --get-regexp ^alias\\. | sed -e s/^alias\\.// -e s/\\ /\\ =\\ /
	a = add
	aa = add --all
	ap = add --patch
	b = branch
	bl = blame
	bc = branch --show-current
	bd = branch -d
	bm = branch --move
	cl = clean
	c = commit
	cm = commit -m
	cn = commit -n
	cnm = commit -nm
	ca = commit --amend
	cam = commit --amend -m
	can = commit --amend -n
	canm = commit --amend -nm
	cae = commit --amend --no-edit
	caen = commit --amend --no-edit -n
	co = checkout
	cob = checkout -b
	cp = cherry-pick
	cpc = cherry-pick --continue
	cps = cherry-pick --skip
	cpa = cherry-pick --abort
	d = diff
	dn = diff --name-only
	ds = diff --staged
	f = fetch
	is = issue
	l = log
	lg = log --graph
	la = log --all
	lag = log --all --graph
	m = merge
	ma = merge --abort
	ph = push -u origin
	pl = pull
	r = reset
	rb = rebase
	rbo = rebase --onto
	ref = reflog
	repo = !gh repo view --web
	rp = repo
	rs = restore
	s = status
	sh = stash
	sw = switch
	issue = "!f() {  \
		if [ \"$1\" ]; then \
			gh issue view --web $1; \
		else \
			issueno=\"$(git branch --show-current | grep -o '[0-9]\\+')\"; \
			if [ \"$issueno\" ]; then \
				gh issue view --web $issueno; \
			fi; \
		fi; \
	}; f"
	pr = !gh pr view --web >/dev/null 2>&1 || gh pr create --web
[push]
	default = current
[log]
	abbrevcommit = yes
[branch]
	autosetupmerge = always
[pull]
	default = current
	rebase = false
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[init]
	defaultBranch = main
[diff]
	algorithm = histogram
[merge]
	tool = nvim -d
	; conflictstyle = diff3
[mergetool]
	prompt = false
