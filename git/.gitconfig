[user]
	name = Jason Woodland
	email = me@jasonwoodland.com
	signingkey = F2C866EAC5CE6A74
[core]
	editor = nvim
	excludesfile = /Users/jason/.gitignore_global
	abbrev = 7
[color]
	ui = true
[format]
	pretty = "%C(magenta)%h%C(blue)%d %C(reset)%s %C(dim white)(%an)%n        %C(green)%aD %C(dim white)(%ar)%C(reset)%n"
[alias]
	alias = !git config --get-regexp ^alias\\. | sed -e s/^alias\\.// -e s/\\ /\\ =\\ /
	a = add
	aa = add --all
	ap = add --patch
	bi = bisect
	bl = blame
	b = branch
	bc = branch --show-current
	bd = branch -d
	bm = branch --move
	cl = clean
	cldf = clean -df
	c = commit
	ca = commit --amend
	cav = commit --amend --no-verify
	ce = commit --amend --no-edit
	cev = commit --amend --no-edit --no-verify
	cv = commit --no-verify
	cm = commit --message
	cam = commit --amend --message
	cavm = commit --amend --no-verify --message
	cvm = commit --no-verify --message
	co = checkout
	cob = checkout -b
	cp = cherry-pick
	cpc = cherry-pick --continue
	cps = cherry-pick --skip
	cpa = cherry-pick --abort
	d = diff
	dn = diff --name-only
	ds = diff --staged
	f = fetch
	is = issue
	l = log
	lg = log --graph
	la = log --all
	lag = log --all --graph
	m = merge
	ma = merge --abort
	ph = push -u origin
	phf = push -u origin --force
	pl = pull
	plr = pull --rebase
	r = reset
	rh = reset --hard
	rs = reset --soft
	rb = rebase
	rbi = rebase --interactive
	rbc = rebase --continue
	rbs = rebase --skip
	rba = rebase --abort
	rbq = rebase --quit
	rbe = rebase --edit-todo
	rbo = rebase --onto
	rl = reflog
	ref = reflog
	repo = !gh repo view --web
	rp = repo
	rt = restore
	rv = revert
	sh = show
	s = status
	sh = stash
	shm = stash --message
	shl = stash list
	shs = stash show
	shsp = stash show -p
	shd = stash drop
	shp = stash pop
	sha = stash apply
	shb = stash branch
	shph = stash push
	sw = switch
	t = tag
	issue = "!f() {  \
		if [ \"$1\" ]; then \
			gh issue view --web $1; \
		else \
			issueno=\"$(git branch --show-current | grep -o '[0-9]\\+')\"; \
			if [ \"$issueno\" ]; then \
				gh issue view --web $issueno; \
			else \
				gh issue create -a @me --web -t '' -b ''; \
			fi; \
		fi; \
	}; f"
	pr = !gh pr view --web >/dev/null 2>&1 || gh pr create -a @me --web
[push]
	default = current
[log]
	abbrevcommit = yes
[branch]
	autosetupmerge = always
[pull]
	default = current
	rebase = false
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[init]
	defaultBranch = main
[diff]
	algorithm = histogram
[merge]
	tool = nvim -d
	conflictstyle = diff3
[mergetool]
	prompt = false
[http]
	postBuffer = 524288000
